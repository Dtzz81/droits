@model List<WreckView>
@{
    ViewData["Title"] = "Wrecks";
}

<h4 class="display-8">@ViewData["Title"]</h4>
<table class="table">
    <thead>
    <tr>
        <th scope="col">Name</th>
        <th scope="col">Status</th>
        <th scope="col">Created</th>
        <th scope="col">Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var wreck in Model)
    {
        <tr>
            <th scope="row">
                <a asp-action="View" asp-route-id="@wreck.Id">@wreck.Name</a>
            </th>
            <td>@wreck.Status</td>
            <td>@wreck.Created.ToString("dd/MM/yyyy")</td>
            <td>
                <a asp-action="Edit" asp-route-id="@wreck.Id" class="btn btn-success">Edit</a>
                <a asp-action="View" asp-route-id="@wreck.Id" class="btn btn-success">View</a>
            </td>
        </tr>
    }
    </tbody>
</table>


<a class="btn btn-success float-end" asp-action="Add">Add Wreck</a>
