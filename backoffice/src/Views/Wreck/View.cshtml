@model WreckView
@{
    ViewData["Title"] = Model.Name==""?"Wreck View":Model.Name;
}


<div class="card">
    <div class="card-header">
        <h2 class="card-title">@ViewData["Title"]</h2>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <partial name="_WreckViewFields"/>
            </div>
        </div>
    </div>
</div>

@if ( Model.Latitude.HasValue() && Model.Longitude.HasValue())
{
    <div class="row mt-3">
        <iframe src="https://maps.google.com/maps?q=@Model.Latitude,@Model.Longitude&amp;output=embed"></iframe>
    </div>
}


<a class="btn btn-primary mt-2 float-end" asp-action="Index">View Wrecks</a>
