@model SalvorForm
@{

    ViewData["Title"] = Model.Id==default(Guid)?"New Salvor":$"Salvor: {Model.Name}";
}

@{
    await Html.RenderPartialAsync("_MessageBanner");
}

<h4>@ViewData["Title"]</h4>
<form class="form-horizontal mt-4" asp-action="Save" method="POST">
    @Html.HiddenFor(m => m.Id)
    <div class="col mt-4">
        <div class="card">
            <h5 class="card-header">Salvor</h5>
            <div class="card-body">
                <div class="form-group">
                    @Html.LabelFor(m => m.Name, new { @class = "col-form-label" })
                    @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Name,"", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "col-form-label" })
                    @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Email,"", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.TelephoneNumber, new { @class = "col-form-label" })
                    @Html.EditorFor(m => m.TelephoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.TelephoneNumber,"", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.DateOfBirth, new { @class = "col-form-label" })
                    @Html.EditorFor(m => m.DateOfBirth, new { htmlAttributes = new { @class = "form-control"} })
                    @Html.ValidationMessageFor(m => m.DateOfBirth,"", new { @class = "text-danger" })
                </div>

                <partial name="_AddressFormFields" for="Address" />

                <div class="mt-4 float-end">
                    <a type="button" class="btn btn-secondary" asp-action="Index">Cancel</a>
                    <button class="btn btn-primary" type="submit">Save</button>
                </div>
            </div>
        </div>
    </div>

</form>
