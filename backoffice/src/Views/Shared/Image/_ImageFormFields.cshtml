@model ImageForm

<div class="js-image-form mb-2">
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col">
                    <h5>Image</h5>
                </div>
                <div class="col">
                    <button type="button" class="btn btn-danger float-end js-remove-image-form">Remove</button>
                </div>
            </div>
        </div>

        <div class="card-body">
            @Html.HiddenFor(m => m.Id)
              <div class="form-group row mt-2">
                  <div class="col-md-3">
                    @Html.LabelFor(m => m.Url, new { @class = "col-form-label font-weight-bold" })
                  </div>
                  <div class="col-md-9">
                      @Html.EditorFor(m => m.Url, new { htmlAttributes = new { @class = "form-control" } })
                      @Html.ValidationMessageFor(m => m.Url, "", new { @class = "text-danger" })
                  </div>
              </div>
        </div>
    </div>
</div>