@{
    ViewData["Title"] = "File Upload";
}

@{
    await Html.RenderPartialAsync("_MessageBanner");
}

<h4>@ViewData["Title"]</h4>

<h2>Droit Triage Upload</h2>

@* add instructions here *@
<div class="border">
    <button class="btn btn-primary" id="triageHelp">How to bulk update triage numbers</button>
    <div class="panel">
        <p>Upload a csv, xls or xlsx file only</p>
        <p>Use the example file as a guide, there should be two columns only with the exact headers shown</p>
        <a href="~/downloads/triage_test.csv" download>
            example file here
        </a>
    </div>
</div>
<form method="post" action="@Url.Action("ProcessTriageFile", "Migration")" enctype="multipart/form-data">

    <div>
        <label for="file">Select File:</label>
        <input type="file" name="file" id="file" accept=".csv,.xls,.xlsx" required />
    </div>
    <br />
    <div>
        <input type="submit" value="Upload" />
    </div>

</form>


